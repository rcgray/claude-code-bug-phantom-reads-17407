{
  "permissions": {
    "allow": [
      "SlashCommand(/wsd:boot)",
      "Bash(bash scripts/init_work_journal.sh:*)",
      "SlashCommand(/wsd:onboard)",
      "WebFetch(domain:github.com)",
      "Bash(cat:*)",
      "Skill(wsd:boot)",
      "Skill(wsd:onboard)",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(bash /Users/gray/Projects/claude-code-bug-phantom-reads-17407/scripts/init_work_journal.sh:*)",
      "WebFetch(domain:www.anthropic.com)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./dev/prompts/**)",
      "Read(./dev/reports/**)",
      "Read(./dev/workbench/**)",
      "Edit(./docs/read-only/**)",
      "Edit(./docs/references/**)",
      "Edit(./docs/reports/**)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/protect_files.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/detect_phantom_read.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "macos-notification",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/misc/macos-notification.sh \"Project Ready\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/misc/macos-notification.sh \"Input Required\""
          }
        ]
      }
    ]
  }
}
